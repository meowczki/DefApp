<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4
">


    <LinearLayout
        android:background="#FFFF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:background="#FFFF"

            android:id="@+id/elekok"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/elektrody_ok" />

        <ImageButton
            android:background="#FFFF"

            android:id="@+id/wskazana"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/wksazana_defi" />

        <ImageButton
            android:id="@+id/defi_ok"
            android:background="#FFFF"

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/defi_ok" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/niewskazana"
            android:background="#FFFF"

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/niewskazana_defi" />

        <ImageButton
            android:id="@+id/eleknieok"
            android:background="#FFFF"

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/elektrody_nie" />

        <ImageButton
            android:id="@+id/defi_brak"
            android:background="#FFFF"

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/defi_brak" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/ekg"
            android:background="#FFFF"

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/ekg" />

        <ImageButton
            android:id="@+id/artefakty"
            android:background="#FFFF"

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/artefakty" />

        <ImageButton
            android:id="@+id/iblad"
            android:background="#FFFF"

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/blad" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView
                android:id="@+id/czas"
                android:background="#FFFF"

                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:text="00:00:000"
                android:textAlignment="center"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:background="#FFFF"

                android:src="@drawable/reset" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/pik"
            android:background="#FFFF"

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/pik" />

        <ImageButton
            android:id="@+id/baed"
            android:background="#FFFF"

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/wlacz" />
    </LinearLayout>

</LinearLayout>